<section id="Sale">
    <div class="site-section block-3 site-blocks-2 bg-light">
        <div class="container">
            <div class="display-header d-flex align-items-center justify-content-between">
                <h2>Products on Sale</h2>
                <a asp-area="Customer" asp-controller="Home" asp-action="Filter" asp-route-discount="True" class="btn btn-primary mt-3">View All</a>
                
            </div>
            <div class="row justify-content-center">
                <div class="carousel-container">
                    <button class="arrow left-arrow" onclick="scrollLeft()"><i class="fa-solid fa-circle-chevron-left"></i></button>
                    <div class="carousel owl-carousel">
                        @foreach (var item in Model.onSaleProducts.Take(12))
                        {
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@item.Id">
                                <div class="product">
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.MainImage)" alt="@item.Name">
                                    <h5>@item.Name</h5>
                                    @if (item.Discount == 0)
                                    {
                                        <p class="price font-weight-bold">@item.Price JD</p>
                                    }
                                    else
                                    {
                                        <p class="price font-weight-bold">
                                            @(item.Price - (item.Discount * item.Price / 100)) JD
                                            <span class="original-price">@item.Price JD</span>
                                        </p>
                                    }
                                    @if (@item.IsAvailable == true)
                                    {
                                        <p class="brand">In Stock</p>
                                    }
                                    else
                                    {
                                        <p class="brand">Out of Stock</p>
                                    }

                                    <p>Sizes: @item.Size</p>
                                </div>
                            </a>
                        }
                    </div>
                    <button class="arrow right-arrow" onclick="scrollRight()"><i class="fa-solid fa-circle-chevron-right"></i></button>
                </div>
            </div>
        </div>
    </div>
</section>

