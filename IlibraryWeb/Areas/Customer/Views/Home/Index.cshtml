@model MainVM

<style>
    .card-wrapper {
        max-width: 1100px;
        margin: 0 auto;
    }

    .img-fluid {
        width: 300px; /* Set a fixed width */
        height: 300px; /* Set a fixed height */
        object-fit: cover; /* Ensures the image scales to fill the dimensions while maintaining aspect ratio */
        display: block;
        margin: 0 auto; /* Centers the image */
        border-radius: 5px; /* Optional: Adds rounded corners */
    }


    img {
        width: 100%;
        height: auto; /* Maintain aspect ratio */
        object-fit: cover; /* Ensure the image fills the container */
        display: block;
    }


    /* Specific Section Image Styles */
    .carousel img,
    .product img {
        width: 200px; /* Adjust based on your layout */
        height: 200px; /* Ensure uniform height */
        object-fit: cover; /* Crop excess to fit */
        margin: auto;
    }

    /* Adjust Banner Images */
    .banner img {
        width: 100%; /* Full-width for banners */
        height: 400px; /* Fixed height */
        object-fit: cover; /* Crop to fit the container */
    }

    /* Partner Brand Logos */
    .partner-col img {
        max-width: 150px;
        height: auto; /* Maintain logo aspect ratio */
        object-fit: contain; /* Contain logos without cropping */
        margin: auto;
    }

    .img-display {
        overflow: hidden;
    }

    .img-showcase {
        display: flex;
        width: 100%;
        transition: all 0.5s ease;
    }

        .img-showcase img {
            min-width: 100%;
        }

    .img-select {
        display: flex;
    }

    .img-item {
        margin: 0.3rem;
    }

        .img-item:nth-child(1),
        .img-item:nth-child(2),
        .img-item:nth-child(3),
        .img-item:nth-child(4) {
            margin-right: 0;
        }

        .img-item:hover {
            opacity: 0.8;
        }

    .product-title {
        font-size: 3rem;
        text-transform: capitalize;
        font-weight: 700;
        position: relative;
        color: #12263a;
        margin: 1rem 0;
    }

        .product-title::after {
            content: "";
            position: absolute;
            left: 0;
            bottom: 0;
            height: 4px;
            width: 80px;
            background: #12263a;
        }

    .product-link {
        text-decoration: none;
        text-transform: uppercase;
        font-weight: 400;
        font-size: 0.9rem;
        display: inline-block;
        margin-bottom: 0.5rem;
        background: #7971ea;
        color: #fff;
        padding: 0 0.3rem;
        transition: all 0.5s ease;
    }

        .product-link:hover {
            opacity: 0.9;
        }

    .product-price {
        margin: 1rem 0;
        font-size: 1rem;
        font-weight: 700;
    }

        .product-price span {
            font-weight: 400;
        }

    .last-price span {
        color: #f66a47;
        text-decoration: line-through;
    }

    .new-price span {
        color: #256eff;
    }

    .product-detail h2 {
        text-transform: capitalize;
        color: #12263a;
        padding-bottom: 0.6rem;
    }

    .product-detail p {
        font-size: 0.9;
        padding: 0.3rem;
        opacity: 0.8;
    }

    .product-detail ul {
        margin: 1rem 0;
        font-size: 0.9;
    }

        .product-detail ul li {
            margin: 0;
            list-style: none;
            background-size: 18px;
            padding-left: 1.7rem;
            font-weight: 600;
            opacity: 0.9;
        }

            .product-detail ul li span {
                font-weight: 400;
            }



    @@media screen and (min-width: 992px) {
        .card {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 1.5rem;
        }

        .screen-wrapper {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .product-imgs {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .produt-content {
            padding-top: 0;
        }
    }
</style>
<style>

    .banner {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        text-align: center; /* Center text for smaller screens */
        background-size: cover; /* Ensure the image covers the container */
        background-position: center;
        background-repeat: no-repeat;
        padding: 2rem;
    }

    @@media (min-width: 768px) {
        .banner

    {
        text-align: left; /* Align text to the left for larger screens */
        padding: 4rem;
    }

    }

    .banner .col-md-5 {
        max-width: 100%;
    }

    .banner h1 {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .banner p {
        font-size: 1rem;
        margin-bottom: 1.5rem;
    }

    .banner img {
        max-width: 100%;
        height: auto;
        display: block;
        margin: 0 auto; /* Center the image */
    }

    @@media (min-width: 768px) {
        .banner img

    {
        max-width: 60%; /* Scale image for larger screens */
        margin: 0; /* Remove centering for larger screens */
    }

    }

    .banner .btn-primary {
        background-color: #555;
        border-color: #555;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        font-weight: bold;
        color: #fff;
        text-transform: uppercase;
    }

    @@media (min-width: 768px) {
        .banner .btn-primary

    {
        font-size: 1.25rem; /* Slightly larger button for larger screens */
    }

    }
</style>




<div class="site-wrap">
    <div class="site-section block-3 site-blocks-2 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="nonloop-block-3 owl-carousel">
                        <!-- Static Sale Item -->
                        @* <div class="item"> *@
                        @*     <div class="block-4 text-center"> *@
                        @*         <figure class="block-4-image"> *@
                        @*             <img src="images/sALES.jpg" alt="Image placeholder" class="img-fluid"> *@
                        @*         </figure> *@
                        @*         <div class="block-4-text p-4"> *@
                        @*             <a href="#Sale"> *@
                        @*                 <button class="btn btn-primary mt-3">ON SALE</button> *@
                        @*             </a> *@
                        @*         </div> *@
                        @*     </div> *@
                        @* </div> *@
                        <!-- Static New Item -->
                        <div class="item">
                            <div class="block-4 text-center">
                                <figure class="block-4-image">
                                    <img src="images/New.jpg" alt="Image placeholder" class="img-fluid">
                                </figure>
                                <div class="block-4-text p-4">
                                    <a href="#new">
                                        <button class="btn btn-primary mt-3">NEW !!</button>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- Dynamic Products -->
                        @foreach (var item in Model.onBannerProducts.Take(15))
                        {

                            <div class="item">
                                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-productId="@item.Id">
                                    <div class="block-4 text-center">
                                        <figure class="block-4-image">
                                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.MainImage)" alt="@item.Name" class="img-fluid">
                                        </figure>
                                        <div class="block-4-text p-4">
                                            <h3>@item.Name</h3>
                                            @if (item.Discount == 0)
                                            {
                                                <p class="text-primary font-weight-bold">@item.Price JD</p>
                                            }
                                            else
                                            {
                                                <p class="price">
                                                    @(item.Price - (item.Discount * item.Price / 100)) JD
                                                    <span class="original-price">@item.Price JD</span>
                                                </p>
                                            }
                                            <p class="mb-0">Sizes: @item.Size</p>
                                        </div>
                                    </div>
                                </a>
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


